{
  "manifest_version": 3,
  "name": "URL Blocker",
  "version": "1.0",
  "description": "Blocks a list of URLs",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "declarativeNetRequest"
    // "declarativeNetRequestFeedback" // Optional: for debugging rules
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js"
    // If background.js uses ES modules (import/export), add: "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "web_accessible_resources": [
    {
      "resources": ["blocked.html", "blocked.js"], // Add blocked.js here
      "matches": ["<all_urls>"] // Or be more specific if possible
    }
  ]
}